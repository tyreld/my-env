	send-vio = send-email --to scsi-main1 --cc scsi-main2 --cc scsi --cc ppc --cc bking
	send-of = send-email --to robh --cc frankr --cc dev-tree

	send-ppc-util = send-email --to ppc-util
	send-librtas = send-email --to librtas

	clone-linus = clone git://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git
	clone-ppcutils = clone https://github.com/ibm-power-utilities/powerpc-utils.git
	clone-librtas = clone https://github.com/ibm-power-utilities/librtas.git
